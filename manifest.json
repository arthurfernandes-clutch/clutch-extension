{
  "manifest_version": 3,
  "name": "Clutch Support Tool",
  "version": "1.0",
  "description": "Clutch Support Tool",
  "permissions": ["storage", "contextMenus"],
  "icons": {
    "16": "images/clutch - 16x16.png",
    "32": "images/clutch - 32x32.png",
    "48": "images/clutch - 64x64.png",
    "128": "images/clutch - 128x128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["http://*/*", "https://*/*"]
    },
    {
      "js": ["scripts/ticket.js"],
      "matches": ["https://withclutch.freshdesk.com/a/tickets/*"]
    }
  ],
  "options_page": "options/options.html",
  "background": {
    "service_worker": "scripts/background.js"
  }
}
